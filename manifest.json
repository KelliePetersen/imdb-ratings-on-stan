{
  "manifest_version": 2,
  "name": "IMDb ratings on Stan",
  "version": "1.0",
  "description": "Displays the IMDB rating of movies that you view on Stan (stan.com.au)",
  "icons": { 
    "16": "icons/icon16.png", 
    "32": "icons/icon32.png", 
    "48":"icons/icon48.png",
    "96":"icons/icon96.png"
  },
  "permissions": [
    "*://*.stan.com.au/*", "*://*.omdbapi.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.stan.com.au/*", "*://*.omdbapi.com/*"
      ],
      "js": ["content.js"]
    },
    {
      "matches": [
        "*://*.stan.com.au/*", "*://*.google.com/*"
      ],
      "js": ["catalogue.js"]
    }
  ]
}